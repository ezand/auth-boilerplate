<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %X{call-id} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>

    <!-- Increase verbosity for Ktor and serialization -->
    <logger name="io.ktor" level="DEBUG"/>
    <logger name="io.ktor.server.plugins.contentnegotiation" level="DEBUG"/>
    <logger name="io.ktor.serialization" level="DEBUG"/>
</configuration>